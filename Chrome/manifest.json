{
	"name": "My Little Emotebox",
	"version": "0.9",
	"manifest_version": 2,
	"description": "An easy way to insert and manage emotes.",
	// "homepage_url": "%MLE_URL%/",
	// "update_url": "%MLE_URL%/updates-chrome.xml",

	"icons": {
		"16": "icons/MLE_16.png",
		"48": "icons/MLE_48.png",
		"128": "icons/MLE_128.png"
	},

	"content_scripts": [
		{
			"matches": [
				"http://*.reddit.com/*",
				"http://reddit.com/*"
			],
			"run_at": "document_end",
			"all_frames": false,
			"js": [
				"includes/mle-codes.js",
				"includes/my-little-emotebox.js"
			]
		}
	],

	"background": {
		"scripts": [
			"includes/mle-codes.js",
			"scripts/background.js"
		],
		"persistent": true
	},

	"options_page": "options.html",

	"permissions": [
		"storage",
		"contextMenus",
		"webRequest",
		"webRequestBlocking",
		"http://reddit.com/",
		"http://*.reddit.com/",
		"https://reddit.com/",
		"https://*.reddit.com/",
		"http://*.redditmedia.com/",
		"https://*.redditmedia.com/",
		"http://*.amazonaws.com/",
		"https://*.amazonaws.com/"
	]
}